#include <HCSR04.h>

// تعریف پین‌ها
#define TRIG_PIN 15
#define ECHO_PIN 13

// ساخت شیء سنسور
UltraSonicDistanceSensor distanceSensor(TRIG_PIN, ECHO_PIN);  // TRIG, ECHO

void setup() {
  Serial.begin(115200);
}

void loop() {
  float distance = distanceSensor.measureDistanceCm();
  
  if (distance == -1.0) {
    Serial.println("No echo received");
  } else {
    Serial.print("Distance: ");
    Serial.print(distance);
    Serial.println(" cm");
  }

  delay(500);
}
